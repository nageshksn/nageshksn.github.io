{
  "$jason": {
    "head": {
      "offline": "true",

      "title": "Camera",
      "description": "Tap to open up camera",
      "actions": {
        "$load": {
            "type": "$set",
            "options": {
                "selected": ""
            },
            "success": {
                "type": "$render"
            }
        }
       
    },
      "templates": {
        "body": {
        
          "style": {
        
            "background": "#aaaaaa",
            "border":"#aaaaaa"
        },
          
          "sections":
          [{
              "items":[
                 
                  {

                      "type": "image",
                      "url": "{{$params.file_name}}",
                      "style":{
                        "width":"100%",
                        "ratio":"1.5",
                        "border":"#aaaaaa"
                      }
                  }
              ]
          }]
        }
      }
    }
  }
}